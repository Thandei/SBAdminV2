{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="user" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('admin_auth_signout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="form-group">
        <input id="exampleInputEmail" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control form-control-user" autocomplete="username" required autofocus>

    </div>

    <div class="form-group">
        <input  id="exampleInputPassword" type="password" name="password" id="inputPassword" class="form-control form-control-user" autocomplete="current-password" required>
    </div>

    <div class="form-group">
        <div class="custom-control custom-checkbox small">
            <input type="checkbox" class="custom-control-input" id="customCheck">
            <label class="custom-control-label" for="customCheck">Remember
                Me</label>
        </div>
    </div>




    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary btn-user btn-block" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
